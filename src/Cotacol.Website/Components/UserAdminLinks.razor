@if (UserProfile.IsAdmin)
{
    <MudIconButton Icon="@Icons.Filled.PersonAdd" Href="@($"admin/user/{SelectedUserId}")">Admin access</MudIconButton>
    <MudIconButton Icon="@Icons.Filled.ChangeHistory" Href="@($"climbs/{SelectedUserId}")">Climbs</MudIconButton>
    <MudIconButton Icon="@Icons.Filled.MultilineChart" Href="@($"achievements/{SelectedUserId}")">Achievements page</MudIconButton>
    <MudIconButton Icon="@Icons.Filled.Map" Href="@($"activities/{SelectedUserId}")">Activities page</MudIconButton>
    <MudIconButton Icon="@Icons.Filled.SportsMotorsports" Target="_blank" Href="@($"https://www.strava.com/athletes/{SelectedUserId}")">Strava page</MudIconButton>
    <MudIconButton Icon="@Icons.Filled.Bookmarks" Href="@($"badges/{SelectedUserId}")">Badges</MudIconButton>
    <MudIconButton Icon="@Icons.Filled.Settings" Href="@($"settings/{SelectedUserId}")">Settings</MudIconButton>
}

@code {

    [Parameter]
    public string UserId { get; set; }

    private string SelectedUserId => string.IsNullOrEmpty(UserId) ? UserProfile.UserId : UserId;
}

