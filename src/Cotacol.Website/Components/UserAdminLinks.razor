@if (UserProfile.IsAdmin)
{
    <MudButton StartIcon="@Icons.Material.Filled.PersonAdd" Href="@($"admin/users/{SelectedUserId}")">Admin access</MudButton>
    <MudButton StartIcon="@Icons.Material.Filled.ChangeHistory" Href="@($"climbs/{SelectedUserId}")">Climbs</MudButton>
    <MudButton StartIcon="@Icons.Material.Filled.MultilineChart" Href="@($"achievements/{SelectedUserId}")">Achievements page</MudButton>
    <MudButton StartIcon="@Icons.Material.Filled.Map" Href="@($"activities/{SelectedUserId}")">Activities page</MudButton>
    <MudButton StartIcon="@Icons.Material.Filled.SportsMotorsports" Target="_blank" Href="@($"https://www.strava.com/athletes/{SelectedUserId}")">Strava page</MudButton>
    <MudButton StartIcon="@Icons.Material.Filled.Bookmarks" Href="@($"badges/{SelectedUserId}")">Badges</MudButton>
    <MudButton StartIcon="@Icons.Material.Filled.Settings" Href="@($"settings/{SelectedUserId}")">Settings</MudButton>
    <MudButton StartIcon="@Icons.Material.Filled.SettingsOverscan" Href="@($"support/scan/{SelectedUserId}")">Scan</MudButton>
}

@code {

    [Parameter]
    public string UserId { get; set; }

    private string SelectedUserId => string.IsNullOrEmpty(UserId) ? UserProfile.UserId : UserId;
}

